<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".scene.MainActivity">

        <TextView
            android:id="@+id/tv_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="첫번째 화면"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="로그인"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_display" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_action2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="viewmodel set data"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/btn_action" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_action3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="get version"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/btn_action2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_action4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="보안 프리퍼런스"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/btn_action3" />

        <FrameLayout
            android:id="@+id/layout_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_action4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>