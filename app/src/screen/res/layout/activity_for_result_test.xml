<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="activity for result test"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="back"
            app:layout_constraintTop_toBottomOf="@id/tv_display" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_action2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ActivityResultContract take TakePicture"
            app:layout_constraintTop_toBottomOf="@id/btn_action" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@id/btn_action2"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="center"
            app:layout_constrainedHeight="true"
            app:layout_constraintTop_toBottomOf="@id/et_input"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>